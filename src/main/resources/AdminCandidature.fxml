<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@styles/app.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AdminCandidature">

    <children>
        <!-- Conteneur pour afficher les candidatures comme des cartes -->
        <VBox fx:id="cardContainer" layoutX="10.0" layoutY="10.0" prefHeight="310.0" prefWidth="580.0" spacing="10.0" styleClass="card-container" />

        <!-- Bouton pour afficher les candidatures -->
        <Button fx:id="btnAfficher" layoutX="10.0" layoutY="340.0" onAction="#afficherCandidatures" prefWidth="160.0" styleClass="button" text="Afficher candidatures" />

        <!-- Boutons pour accepter ou refuser une candidature -->
        <Button fx:id="btnAccepter" layoutX="200.0" layoutY="340.0" onAction="#accepterCandidature" prefWidth="100.0" styleClass="button green" text="Accepter" />
        <Button fx:id="btnRefuser" layoutX="320.0" layoutY="340.0" onAction="#refuserCandidature" prefWidth="100.0" styleClass="button" text="Refuser" />

        <!-- Bouton pour revenir Ã  l'accueil -->
        <Button layoutX="438.0" layoutY="339.0" onAction="#RetourpageAcceuil" prefHeight="30.0" prefWidth="148.0" styleClass="button" text="Retour Page Accueil" />
    </children>
</AnchorPane>
