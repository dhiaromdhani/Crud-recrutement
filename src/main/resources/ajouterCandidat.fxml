<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.AjouterCandidatController"
            prefWidth="600.0" prefHeight="500.0">

    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
            <!-- Formulaire -->
            <HBox spacing="10">
                <TextField fx:id="txtNom" promptText="Nom" />
                <TextField fx:id="txtPrenom" promptText="Prénom" />
            </HBox>
            <HBox spacing="10">
                <TextField fx:id="txtEmail" promptText="Email" />
                <TextField fx:id="txtTelephone" promptText="Téléphone" />
            </HBox>
            <HBox spacing="10">
                <Label text="Date de candidature:" />
                <DatePicker fx:id="dateCandidaturePicker" />
            </HBox>

            <!-- Boutons -->
            <HBox spacing="10">
                <Button fx:id="btnAjouter"         text="Ajouter"          onAction="#Ajouter" />
                <Button fx:id="btnModifier"        text="Modifier"         onAction="#Modifier" />
                <Button fx:id="btnSupprimer"       text="Supprimer"        onAction="#Supprimer" />
                <Button fx:id="btnLire"            text="Lire"             onAction="#Lire" />
                <Button fx:id="btnValiderDemande"  text="Valider Demande"  onAction="#ValiderDemande" />
            </HBox>

            <!-- Card View -->
            <ScrollPane fitToWidth="true" prefHeight="300">
                <content>
                    <VBox fx:id="cardContainer" spacing="10" />
                </content>
            </ScrollPane>
        </VBox>
    </children>
</AnchorPane>
