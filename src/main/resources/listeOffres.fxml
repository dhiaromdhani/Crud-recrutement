<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.ListeOffres">

    <children>
        <!-- Conteneur de cartes pour les offres -->
        <ScrollPane fitToWidth="true" layoutX="20.0" layoutY="14.0" prefHeight="320.0" prefWidth="560.0">
            <content>
                <VBox fx:id="cardContainer" spacing="10" />
            </content>
        </ScrollPane>

        <!-- Bouton Postuler -->
        <Button layoutX="480.0" layoutY="350.0" mnemonicParsing="false" onAction="#Postuler" text="Postuler" />
    </children>
</AnchorPane>
